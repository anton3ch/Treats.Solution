@{
  Layout = "_Layout";
}

@using Bakery.Models;
<div class="jumbotron text-center">
<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 
else
{
  <ul class="mb-5 list-group">
  @foreach (Treat treat in Model)
  {
    <li class="list-group-item list-group-item-action">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
  </ul>
}
  </div>

<p>@Html.ActionLink("Add new treat", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>