@{
  Layout = "_Layout";
}

@using Bakery.Models;
<div class="jumbotron text-center">

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} else {
  <ul class="mb-5 list-group">  
  @foreach (Flavor flavor in Model)
  {
    <li class="list-group-item list-group-item-action">@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
  </ul>
}
</div>
<p>@Html.ActionLink("Add new flavor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>